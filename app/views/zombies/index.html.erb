<p id="notice"><%= notice %></p>

<h1>Zombies</h1>

<div class="row">
  
  <% @zombies.each_with_index do |zombie,index| %>


  <div class="card" style="width: 18rem;">
    <img src="<%= image_url('Zombie'+index.to_s+'.png')%>" class="card-img-top" alt="...">

    
    <div class="card-body">
      <h5 class="card-title"> <%= zombie.name %> </h5>
      <p class="card-text"> <%= zombie.weapon %>  </p>
      <p class="card-text"> <%= zombie.kills %>  </p>
      
      <%= link_to 'Show', zombie, class:"btn btn-primary"  %>
      <%= link_to 'Edit', zombie, class:"btn btn-primary"  %>
      <%= link_to 'Destroy', zombie, class:"btn btn-primary"  %>
    </div>
  </div>
  
  <% end %>
</div>






<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weapon</th>
      <th>Kills</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zombies.each do |zombie| %>
   
      <tr>
        <td><%= zombie.name %></td>
        <td><%= zombie.weapon %></td>
        <td><%= zombie.kills %></td>
   
        <td><%= link_to 'Show', zombie %></td>
        <td><%= link_to 'Edit', edit_zombie_path(zombie) %></td>
        <td><%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

