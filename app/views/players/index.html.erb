<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sport</th>
      <th>Skills</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.sport %></td>
        <td><%= player.skills %></td>
        <td><%= link_to 'Show', player_path(player) %></td>
        <td><%= link_to 'Edit', edit_player_path %></td>
        <td><%= link_to 'Destroy', player_path(player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

